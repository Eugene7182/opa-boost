{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/server.ts",
    "src/bot.ts",
    "src/db.ts",
    "src/config/**/*",
    "src/routes/**/*",
    "src/middleware/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/webapp",
    "src/integrations",
    "node_modules"
  ]
}
