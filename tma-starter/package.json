{
  "name": "tma-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "nodemon",
    "dev:vite": "vite",
    "dev": "concurrently -k -n server,web \"npm:dev:server\" \"npm:dev:vite\"",
    "build": "vite build",
    "start": "node --env-file=.env dist-server/server.cjs",
    "build:server": "tsc --project tsconfig.json --outDir dist-server && node scripts/postbuild.cjs"
  },
  "dependencies": {
    "@telegram-apps/init-data-node": "^2.0.0",
    "body-parser": "^1.20.3",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.28",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.0.0"
  }
}
