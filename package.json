{
  "name": "opa-boost-miniapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:bot\" \"npm:dev:web\"",
    "dev:server": "tsx watch --env-file .env.local src/server.ts",
    "dev:bot": "tsx watch --env-file .env.local src/bot.ts",
    "dev:web": "vite --config vite.config.ts",
    "build": "npm run prisma:generate && npm run build:server && npm run build:web",
    "build:server": "tsc -p tsconfig.server.json",
    "build:web": "vite build --config vite.config.ts",
    "start": "concurrently \"node build/server.js\" \"node build/bot.js\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "concurrently": "^9.1.0",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
