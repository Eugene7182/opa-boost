{
  "name": "opa-boost-miniapp",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:web": "vite --config vite.config.ts",
    "dev:server": "tsx watch --env-file .env.local src/server.ts",
    "dev:bot": "tsx watch --env-file .env.local src/bot.ts",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:bot\" \"npm:dev:web\"",
    "build:web": "vite build",
    "build:server": "tsc --project tsconfig.json --outDir dist-server",
    "build": "npm run build:web && npm run build:server",
    "start": "node dist-server/server.js",
    "setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.28",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/supertest": "^2.0.16",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "prisma": "^5.18.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.0",
    "vitest": "^2.1.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
